---
import BaseHead from "../components/Head.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
}

const { title, description, image, keywords } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      keywords={keywords}
      image={image}
    />
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
